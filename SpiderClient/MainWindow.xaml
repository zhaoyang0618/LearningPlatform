<Window x:Class="SpiderClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpiderClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="2">URL:</TextBlock>
                <TextBox Margin="2" Width="600" x:Name="textUrl">http://www.baidu.com</TextBox>
                <Button Margin="2" Click="OnButtonGetContentClick">获取</Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" x:Name="textHTML" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                
            </TextBox>
        </Grid>
    </Grid>
</Window>
